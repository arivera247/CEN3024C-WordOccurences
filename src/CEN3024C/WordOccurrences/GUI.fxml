<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="CEN3024C.WordOccurrences.Controller">
    <VBox alignment="CENTER" spacing="20.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>

        <Label fx:id="wordOccurrence" text="Enter URL and click the scan button." />
        <TextArea fx:id="urlTextArea" prefHeight="20.0" prefWidth="287.0" promptText="Enter URL and click the scan button." text="https://www.gutenberg.org/files/1065/1065-h/1065-h.htm" wrapText="true" />
        <ProgressBar prefWidth="200.0" progress="0.0" />
        <Button fx:id="scanButton" onAction="#onMainButtonClick" text="Scan" />
        <ScrollPane fx:id="consoleScrollPane" prefHeight="200.0" prefWidth="200.0">
            <content>
                <TextArea fx:id="consoleTextArea" minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0" editable="false" wrapText="true" />
            </content>
        </ScrollPane>


    </VBox>
</AnchorPane>
